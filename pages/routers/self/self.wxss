.info{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-top: 50rpx;
}
.useravater{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.avatar{ 
  display: flex;
  width: 130rpx;  
  height: 130rpx;  
  border-radius: 50%;
  overflow: hidden;
  margin-top: 20rpx;
}
.list{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin: 40rpx 0;
}
.items{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0;
}
.line{
  background: #f7f7f9;
  width: 95%;
  height: 3rpx;
  margin: 0 auto;
}
.name{
  margin: auto 35rpx;
  font-size: 30rpx;
}
.value{
  color: darkslategray;
  font-size: 30rpx;
  position: absolute;
  right: 55rpx;
}
.img-b{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: 15rpx;
}
.bind-button{
  width: 600rpx;
  font-size: 35rpx;
  line-height: 60rpx;
  background-color: #5297f7;
  color: #fff;
  margin-top: 50rpx;
  padding: 15rpx 0;
}

/* 更换个人信息 */
.input{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.495);
  display: flex;
  z-index: 99;
}
.input-body{
  width: 100%;
  height: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 0;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
}
.input .title{
  width: 100%;
  color: #000;
  font-size: 40rpx;
  text-align: center;
  margin: 30rpx auto 20rpx;
}
.input .items{
  width: 90%;
  display: flex;
  margin: 25rpx auto;
  flex-direction: row;
  justify-content: space-between;
}
.input .item{
  width: 75%;
  display: flex;
  flex-direction: row;
}
.input .name{
  width: 20%;
  color: #000;
  font-size: 32rpx;
  margin: auto 0;
}
.input .items input{
  color: #8a8a8a;
  background: #fff;
  width: 75%;
  line-height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  padding: 17rpx 0;
  border-radius: 15rpx;
  border-style: solid;
  border-width: 3rpx;
  border-color: #dadada;
}
.smscode{
  background: #fff;
  width: 35%;
  line-height: 60rpx;
  font-size: 28rpx;
  text-align: center;
  padding: 9rpx 0;
  border-radius: 15rpx;
  border-style: solid;
  border-width: 3rpx;
  border-color: #dadada;
}
.button{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 20rpx auto 40rpx;
}
.button .cancel{
  width: 40%;
  line-height: 60rpx;
  padding: 15rpx;
  text-align: center;
  color: #000;
  background: #fff;
  font-size: 32rpx;
  border-radius: 20rpx;
}
.button .confirm{
  width: 40%;
  line-height: 60rpx;
  padding: 15rpx;
  text-align: center;
  color: #fff;
  background: #5297f7;
  font-size: 32rpx;
  border-radius: 20rpx;
}