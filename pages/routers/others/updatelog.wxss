Page{
  width: 100%;
  background: #f4f4f7;
}
.top{
  width: 100%;
  color: #5297f7;
  padding: 20rpx 0;
  font-size: 34rpx;
  font-weight: bold;
  justify-content: flex-start;
  margin: 20rpx 25rpx 0;
}
.main{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin: 20rpx 0;
  background: #fff;
}
.header{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.name{
  color: #5297f7;
  font-size: 32rpx;
  font-weight: bold;
  margin: 15rpx 20rpx;
}
.date{
  color: #36ab60;
  font-size: 32rpx;
  font-weight: bold;
  margin: 15rpx 0;
  margin-left: 330rpx;
}
.body{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.body text{
  color: #797979;
  font-size: 30rpx;
  overflow: hidden;
  margin: 15rpx 20rpx;
}
.line{
  width: 100%;
  height: 3rpx;
  background: #f4f4f7;
}