.items{
  width: 100%;
  line-height: 60rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  padding: 25rpx 10rpx;
  justify-content: space-between;
}
.title{
  color: #a1a1a1;
  font-size: 32rpx;
  margin: 35rpx 20rpx 25rpx;
}
.name{
  color: #000;
  font-size: 32rpx;
  margin: auto 15rpx;
}
.switch{
  position: absolute;
  right: 15rpx;
  margin: auto 15rpx;
}
.items input{
  color: #646464;
  background: #fff;
  width: 70%;
  line-height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  padding: 18rpx 0;
  border-radius: 15rpx;
  border-style: solid;
  border-width: 3rpx;
  margin: auto 15rpx;
  border-color: #dbdbdb;
}
.line{
  width: 100%;
  height: 3rpx;
  background: #a1a1a1;
}
.button{
  width: 75%;
  line-height: 60rpx;
  font-size: 35rpx;
  background-color: #5297f7;
  color: #fff;
  padding: 15rpx 0;
  margin: 65rpx auto;
}