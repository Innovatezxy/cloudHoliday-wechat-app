/* 滚动通知栏 */
.services-swiper{
  background: #5297f7;
  height: 40rpx;
  width: 100%;
  padding: 15rpx 5rpx;
  margin: 0 auto 15rpx;
}
.swiper-item{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
}
.swiper-item image{
  width: 38rpx;
  margin: auto 0;
}
.swiper-text{
  font-size: 30rpx;
  color: #fff;
  margin: auto 0;
}

.user_info{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin: 10rpx auto 20rpx;
  justify-content: space-around;
}
.user_info text{
  color: #fff;
  font-size: 32rpx;
}
.current{
  color: #fff;
  font-size: 35rpx;
  font-weight: bold;
  margin: 5rpx auto 20rpx;
}
.body{
  width: 100%;
  display: flex;
  background: #fff;
  flex-direction: column;
  justify-content: center;
  margin: 0 auto 10rpx;
  position: relative;
  z-index: 99
}
.body .title{
  width: 100%;
  color: #808080;
  text-align: left;
  font-size: 40rpx;
  font-weight: bold;
  margin: 25rpx auto 35rpx 7.5%;
}

.form{
  width: 85%;
  margin: 20rpx auto;
}
.form .items{
  width: 100%;
  display: flex;
  margin: 25rpx auto;
  flex-direction: row;
  justify-content: space-between;
}
.form .item{
  width: 70%;
  display: flex;
  margin: 25rpx auto;
  justify-content: flex-start;
}
.name{
  width: 25%;
  color: #000;
  font-size: 32rpx;
  margin: auto 0;
}
.items input{
  color: #8a8a8a;
  background: #fff;
  width: 70%;
